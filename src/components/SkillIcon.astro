---

interface Props {
    img: string;
    name: string;
    size?: string;
}

const { img, name, size="w-16 w-16" } = Astro.props;
---

<div class="flex flex-col items-center">
    <img 
        src={img} 
        class={size + ""}
        alt={name}
    >
    <span class="font-bold text-gray-superlight">{ name }</span>
</div>


